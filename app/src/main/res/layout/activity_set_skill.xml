<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="50dp"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Current skill level"
        android:id="@+id/tvCurrentSkillLevel"
        android:layout_gravity="center_horizontal"
        android:editable="false"
        android:paddingBottom="20dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Placeholder"
        android:id="@+id/tvSkillCounter"
        android:layout_gravity="center_horizontal"
        android:editable="false"
        android:paddingBottom="20dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set skill"
        android:id="@+id/btnSetSkill"
        android:layout_gravity="center_horizontal"
        android:onClick="newSkillLevel"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tfNewSkillLevel"
        android:layout_gravity="center_horizontal"
        android:hint="Set a new skill level"
        android:paddingTop="20dp"
        android:inputType="number"
        />
</LinearLayout>